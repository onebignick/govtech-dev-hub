generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id          String     @id @default(cuid())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  clerkUserId String?    @unique
  blogPosts   BlogPost[]
  products    Product[]  @relation("ProductToUser")
}

model Image {
  id        String   @id @default(cuid())
  publicId  String   @unique
  format    String
  version   String
  url       String
  secureUrl String
  logoFor   Product? @relation("ProductLogo")
  coverFor  Product? @relation("ProductCover")
}

model BlogPost {
  id        String   @id
  title     String
  content   String
  authorID  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    User     @relation(fields: [authorID], references: [id])

  @@index([title])
}

model Product {
  id         String      @id
  name       String
  summary    String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  changelogs Changelog[]
  features   Feature[]
  admins     User[]      @relation("ProductToUser")
  logo       Image       @relation("ProductLogo", fields: [logoId], references: [id])
  logoId     String      @unique
  cover      Image       @relation("ProductCover", fields: [coverId], references: [id])
  coverId    String      @unique

  @@index([name])
}

model Feature {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  productId   String
  product     Product @relation(fields: [productId], references: [id])
}

model Changelog {
  id        Int      @id @default(autoincrement())
  quarter   String
  changes   String[]
  productId String
  product   Product  @relation(fields: [productId], references: [id])
}
